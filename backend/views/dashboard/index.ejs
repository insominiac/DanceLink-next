<h1><i class="fas fa-tachometer-alt"></i> Dashboard</h1>

<div class="row mb-4">
    <!-- Users Stats -->
    <div class="col-md-3">
        <div class="card card-stats">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-muted">Total Users</h5>
                        <h3><%= stats.users.total_users || 0 %></h3>
                        <small class="text-success">+<%= stats.users.new_users_30d || 0 %> this month</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bookings Stats -->
    <div class="col-md-3">
        <div class="card card-stats">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-muted">Total Bookings</h5>
                        <h3><%= stats.bookings.total_bookings || 0 %></h3>
                        <small class="text-info"><%= stats.bookings.confirmed_bookings || 0 %> confirmed</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-ticket-alt fa-2x text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Revenue Stats -->
    <div class="col-md-3">
        <div class="card card-stats">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-muted">Total Revenue</h5>
                        <h3>$<%= parseFloat(stats.revenue.total_revenue || 0).toFixed(2) %></h3>
                        <small class="text-success">+$<%= parseFloat(stats.revenue.revenue_30d || 0).toFixed(2) %> this month</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-dollar-sign fa-2x text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Content Stats -->
    <div class="col-md-3">
        <div class="card card-stats">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title text-muted">Active Classes</h5>
                        <h3><%= stats.content.active_classes || 0 %></h3>
                        <small class="text-info"><%= stats.content.upcoming_events || 0 %> upcoming events</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-chalkboard-teacher fa-2x text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Quick Actions -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-bolt"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/admin/users/new" class="btn btn-outline-primary">
                        <i class="fas fa-user-plus"></i> Add New User
                    </a>
                    <a href="/admin/venues/new" class="btn btn-outline-success">
                        <i class="fas fa-plus"></i> Add New Venue
                    </a>
                    <a href="/admin/classes/new" class="btn btn-outline-info">
                        <i class="fas fa-plus"></i> Create New Class
                    </a>
                    <a href="/admin/events/new" class="btn btn-outline-warning">
                        <i class="fas fa-calendar-plus"></i> Create New Event
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Recent Activity -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-clock"></i> System Status</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between">
                        <span><i class="fas fa-database text-success"></i> Database</span>
                        <span class="badge bg-success">Connected</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span><i class="fas fa-users text-primary"></i> Regular Users</span>
                        <span class="badge bg-primary"><%= stats.users.regular_users || 0 %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span><i class="fas fa-chalkboard-teacher text-info"></i> Instructors</span>
                        <span class="badge bg-info"><%= stats.users.instructors || 0 %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span><i class="fas fa-map-marker-alt text-warning"></i> Venues</span>
                        <span class="badge bg-warning"><%= stats.content.total_venues || 0 %></span>
                    </li>
                    <% if (stats.content.unread_messages > 0) { %>
                    <li class="list-group-item d-flex justify-content-between">
                        <span><i class="fas fa-envelope text-danger"></i> Unread Messages</span>
                        <span class="badge bg-danger"><%= stats.content.unread_messages %></span>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-info-circle"></i> Welcome to Dance Website Admin</h5>
            </div>
            <div class="card-body">
                <p>Welcome to the comprehensive admin panel for your Dance Website. Here you can manage:</p>
                <div class="row">
                    <div class="col-md-6">
                        <ul>
                            <li><strong>Users</strong> - Manage members, instructors, and admins</li>
                            <li><strong>Venues</strong> - Add and manage dance venues</li>
                            <li><strong>Classes</strong> - Schedule and manage dance classes</li>
                            <li><strong>Events</strong> - Create and organize dance events</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul>
                            <li><strong>Bookings</strong> - Track class and event bookings</li>
                            <li><strong>Transactions</strong> - Monitor payments and refunds</li>
                            <li><strong>Forum</strong> - Moderate community discussions</li>
                            <li><strong>Reports</strong> - View analytics and insights</li>
                        </ul>
                    </div>
                </div>
                <div class="mt-3">
                    <p><strong>Getting Started:</strong></p>
                    <ol>
                        <li>Check the <strong>Users</strong> section to manage accounts and roles</li>
                        <li>Set up <strong>Venues</strong> for your dance classes and events</li>
                        <li>Create <strong>Classes</strong> and schedule sessions</li>
                        <li>Monitor <strong>Bookings</strong> and payments</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
