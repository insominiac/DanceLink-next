<div class="dashboard-container">
    <div class="dashboard-header">
        <h1 class="dashboard-title">
            <i class="fas fa-tachometer-alt"></i>
            Dashboard
        </h1>
        <p class="dashboard-subtitle">Welcome to your Dance Website admin panel overview</p>
    </div>

    <!-- Statistics Grid -->
    <div class="stats-grid admin-stats-row">
        <!-- Users Stats -->
        <div class="stat-card primary admin-animate-fadeInUp" style="animation-delay: 0.1s;">
            <div class="stat-card-content">
                <div class="stat-card-data">
                    <h2 class="stat-number" data-count="<%= stats.users.total_users || 0 %>"><%= stats.users.total_users || 0 %></h2>
                    <p class="stat-label">Total Users</p>
                    <div class="stat-change positive">
                        <i class="stat-change-icon fas fa-arrow-up"></i>
                        <span class="stat-change-value">+<%= stats.users.new_users_30d || 0 %></span>
                        <span class="stat-change-period">this month</span>
                    </div>
                </div>
                <div class="stat-card-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
        
        <!-- Bookings Stats -->
        <div class="stat-card success admin-animate-fadeInUp" style="animation-delay: 0.2s;">
            <div class="stat-card-content">
                <div class="stat-card-data">
                    <h2 class="stat-number" data-count="<%= stats.bookings.total_bookings || 0 %>"><%= stats.bookings.total_bookings || 0 %></h2>
                    <p class="stat-label">Total Bookings</p>
                    <div class="stat-change neutral">
                        <i class="stat-change-icon fas fa-check-circle"></i>
                        <span class="stat-change-value"><%= stats.bookings.confirmed_bookings || 0 %></span>
                        <span class="stat-change-period">confirmed</span>
                    </div>
                </div>
                <div class="stat-card-icon success">
                    <i class="fas fa-ticket-alt"></i>
                </div>
            </div>
        </div>
        
        <!-- Revenue Stats -->
        <div class="stat-card warning admin-animate-fadeInUp" style="animation-delay: 0.3s;">
            <div class="stat-card-content">
                <div class="stat-card-data">
                    <h2 class="stat-number" data-count="<%= parseFloat(stats.revenue.total_revenue || 0).toFixed(2) %>">$<%= parseFloat(stats.revenue.total_revenue || 0).toFixed(2) %></h2>
                    <p class="stat-label">Total Revenue</p>
                    <div class="stat-change positive">
                        <i class="stat-change-icon fas fa-arrow-up"></i>
                        <span class="stat-change-value">+$<%= parseFloat(stats.revenue.revenue_30d || 0).toFixed(2) %></span>
                        <span class="stat-change-period">this month</span>
                    </div>
                </div>
                <div class="stat-card-icon warning">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
        </div>
        
        <!-- Content Stats -->
        <div class="stat-card info admin-animate-fadeInUp" style="animation-delay: 0.4s;">
            <div class="stat-card-content">
                <div class="stat-card-data">
                    <h2 class="stat-number" data-count="<%= stats.content.active_classes || 0 %>"><%= stats.content.active_classes || 0 %></h2>
                    <p class="stat-label">Active Classes</p>
                    <div class="stat-change neutral">
                        <i class="stat-change-icon fas fa-calendar-alt"></i>
                        <span class="stat-change-value"><%= stats.content.upcoming_events || 0 %></span>
                        <span class="stat-change-period">upcoming events</span>
                    </div>
                </div>
                <div class="stat-card-icon info">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions and System Status -->
    <div class="quick-actions-grid">
        <!-- Quick Actions -->
        <div class="quick-actions-card">
            <div class="quick-actions-header">
                <div class="quick-actions-icon">
                    <i class="fas fa-bolt"></i>
                </div>
                <h3 class="quick-actions-title">Quick Actions</h3>
            </div>
            <div class="quick-actions-body">
                <a href="/admin/users/new" class="quick-action-btn">
                    <i class="quick-action-icon fas fa-user-plus"></i>
                    <span>Add New User</span>
                </a>
                <a href="/admin/venues/new" class="quick-action-btn">
                    <i class="quick-action-icon fas fa-map-marker-alt"></i>
                    <span>Add New Venue</span>
                </a>
                <a href="/admin/classes/new" class="quick-action-btn">
                    <i class="quick-action-icon fas fa-chalkboard-teacher"></i>
                    <span>Create New Class</span>
                </a>
                <a href="/admin/events/new" class="quick-action-btn">
                    <i class="quick-action-icon fas fa-calendar-plus"></i>
                    <span>Create New Event</span>
                </a>
            </div>
        </div>
        
        <!-- System Status -->
        <div class="system-status-card">
            <div class="system-status-header">
                <div class="system-status-icon">
                    <i class="fas fa-server"></i>
                </div>
                <h3 class="system-status-title">System Status</h3>
            </div>
            <div class="system-status-body">
                <div class="status-item">
                    <div class="status-label">
                        <div class="status-icon success">
                            <i class="fas fa-check"></i>
                        </div>
                        <span>Database</span>
                    </div>
                    <span class="status-value success">Connected</span>
                </div>
                <div class="status-item">
                    <div class="status-label">
                        <div class="status-icon info">
                            <i class="fas fa-users"></i>
                        </div>
                        <span>Regular Users</span>
                    </div>
                    <span class="status-value info"><%= stats.users.regular_users || 0 %></span>
                </div>
                <div class="status-item">
                    <div class="status-label">
                        <div class="status-icon warning">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <span>Instructors</span>
                    </div>
                    <span class="status-value warning"><%= stats.users.instructors || 0 %></span>
                </div>
                <div class="status-item">
                    <div class="status-label">
                        <div class="status-icon info">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <span>Venues</span>
                    </div>
                    <span class="status-value info"><%= stats.content.total_venues || 0 %></span>
                </div>
                <% if (stats.content.unread_messages > 0) { %>
                <div class="status-item">
                    <div class="status-label">
                        <div class="status-icon danger">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <span>Unread Messages</span>
                    </div>
                    <span class="status-value danger"><%= stats.content.unread_messages %></span>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Welcome Section -->
    <div class="dashboard-grid grid-col-12">
        <div class="admin-card admin-animate-fadeInUp">
            <div class="admin-card-header">
                <h2><i class="fas fa-info-circle"></i> Welcome to Dance Website Admin</h2>
            </div>
            <div class="admin-card-body">
                <p class="mb-4">Welcome to your comprehensive admin panel for the Dance Website. From here you can manage all aspects of your dance community:</p>
                
                <div class="dashboard-grid">
                    <div class="grid-col-6">
                        <h4 class="admin-gradient-text mb-3">Core Management</h4>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-users text-primary me-2"></i>
                                <strong>Users</strong> - Manage members, instructors, and admins
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-map-marker-alt text-success me-2"></i>
                                <strong>Venues</strong> - Add and manage dance venues
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-chalkboard-teacher text-info me-2"></i>
                                <strong>Classes</strong> - Schedule and manage dance classes
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-calendar-alt text-warning me-2"></i>
                                <strong>Events</strong> - Create and organize dance events
                            </li>
                        </ul>
                    </div>
                    <div class="grid-col-6">
                        <h4 class="admin-gradient-text mb-3">Business Operations</h4>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-ticket-alt text-primary me-2"></i>
                                <strong>Bookings</strong> - Track class and event bookings
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-credit-card text-success me-2"></i>
                                <strong>Transactions</strong> - Monitor payments and refunds
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-comments text-info me-2"></i>
                                <strong>Forum</strong> - Moderate community discussions
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-chart-bar text-warning me-2"></i>
                                <strong>Reports</strong> - View analytics and insights
                            </li>
                        </ul>
                    </div>
                </div>
                
                <div class="mt-4 p-4 bg-light rounded">
                    <h5 class="text-primary mb-3">
                        <i class="fas fa-rocket me-2"></i>Getting Started
                    </h5>
                    <div class="row">
                        <div class="col-md-6">
                            <ol class="ps-3">
                                <li class="mb-2">Check the <strong class="text-primary">Users</strong> section to manage accounts and roles</li>
                                <li class="mb-2">Set up <strong class="text-success">Venues</strong> for your dance classes and events</li>
                            </ol>
                        </div>
                        <div class="col-md-6">
                            <ol class="ps-3" start="3">
                                <li class="mb-2">Create <strong class="text-info">Classes</strong> and schedule sessions</li>
                                <li class="mb-2">Monitor <strong class="text-warning">Bookings</strong> and payments</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
